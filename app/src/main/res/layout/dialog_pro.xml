<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent_00000000"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_marginLeft="100dp"
            android:id="@+id/butDialogClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/rb_close"
            android:text="取消"
            android:textColor="@color/white_FFFFFF"
            android:textSize="16sp" />
        <View
            android:layout_marginLeft="100dp"
            android:layout_width="3dp"
            android:background="@color/white_FFFFFF"
            android:layout_height="10dp"/>
        <LinearLayout
            android:layout_marginBottom="80dp"
            android:id="@+id/llRb"
            android:layout_width="306dp"
            android:layout_height="293dp"
            android:background="@drawable/bg_white"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:background="@mipmap/dialog_welfare2" />


            <TextView

                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:layout_gravity="center"

                android:textColor="@color/gray_666666"
                android:text="欢迎拨打客服热线，我们会真诚为您解答。"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:textSize="27sp"
                android:textColor="@color/blue_6da7ff"
                android:text="400-678-6922"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginBottom="6dp"
                android:text="工作日：09:00 - 24:00    节假日：09:00 - 18:00"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:textColor="@color/gray_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btExit"
                android:gravity="center"
                android:text="确认"
                android:layout_marginBottom="25dp"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@drawable/blue_pro"
                android:textColor="@color/white_FFFFFF"
                android:layout_gravity="center"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>